<Window x:Class="One_Click_Reacurring_Timer.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:One_Click_Reacurring_Timer.Views"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="One Click Timer" Height="130" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <TextBlock  Grid.Column="2" Grid.Row="1" Text="Set Time" FontSize="15"/>
        <Button     Grid.Column="1" Grid.Row="2" Content="Click it" 
                    x:Name="ClickToday" FontSize="40"/>
        <TextBox    Grid.Column="2" Grid.Row="2" x:Name="Time" 
                    FontSize="40" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
